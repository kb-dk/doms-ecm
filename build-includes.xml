<project name="Default build targets" basedir=".">

      <property name="module.dir" value="${basedir}"/>

    <!-- Global- and module specific libs -->
    <fileset id="module.libs" dir="${module.dir}/lib">
        <include name="**/jars/**/*.jar"/>
    </fileset>

    <property name="global.dir" value="${basedir}"/>

 
<!--
    <fileset id="project.libs" dir="${global.dir}/lib">
        <exclude name="**"/>
    </fileset>


    <fileset id="module.dependencies" dir="${global.dir}/modules">
        <exclude name="**"/>
    </fileset>
-->

    <path id="build.classpath">
        <fileset refid="module.libs"/>
        <fileset refid="project.libs"/>
        <fileset refid="module.dependencies"/>
    </path>

    <target  name="depends">
        <!--        <ant dir="${modules.dir}/repository" target="jar"/>-->
    </target>

    <target name="compile" depends="depends"
            description="Compile all production classes, and copy properties to class dir">

        <mkdir dir="classes"/>

<!--
        <property refid="build.classpath" name="build.classpath.echo"/>
        <property refid="project.libs" name="project.libs.echo"/>
        <echo message="${basedir}"/>
        <echo message="${module.dir}"/>
        <echo message="${global.dir}"/>

        <echo message="${project.libs.echo}"/>
        <echo message="${build.classpath.echo}"/>

-->
        <javac source="1.6" destdir="classes" debug="on"
               encoding="UTF-8">
            <src path="src"/>
            <classpath refid="build.classpath"/>
        </javac>
        <copy todir="classes">
          <fileset dir="src">
            <include name="**/*.xml"/>
          </fileset>
        </copy>

    </target>



    <target name="jar" depends="compile"
            description="Pack the webdirectory into a warfile ready for deployment">
        <mkdir dir="dist"/>

        <jar destfile="dist/${jarfilename}"
             basedir="classes" />
    </target>


    <target name="clean">
        <delete dir="classes"/>
    </target>

    <target name="distclean" depends="clean">
        <delete dir="dist"/>
    </target>


</project>